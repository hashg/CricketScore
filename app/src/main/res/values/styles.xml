<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#22bb77</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#22bb77</item>
        <item name="android:statusBarColor">@android:color/darker_gray</item>
    </style>

    <style name="style_image_team">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="style_text_team">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:color">#616161</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="style_score">
        <item name="android:textSize">48sp</item>
        <item name="android:color">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_horizontal</item>
        <!--<item name="android:layout_marginBottom">24dp</item>-->
        <!--<item name="android:padding">8dp</item>-->
    </style>

    <style name="style_overs">
        <item name="android:textSize">16sp</item>
        <item name="android:color">@android:color/darker_gray</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="style_runs_btn">
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="style_wicket_btn">
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@android:color/holo_red_dark</item>
    </style>

    <style name="style_fouls_btn">

    </style>

    <style name="style_reset_btn">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">32dp</item>
    </style>

</resources>